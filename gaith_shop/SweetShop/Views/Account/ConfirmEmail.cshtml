@{
    ViewData["Title"] = "تأكيد البريد الإلكتروني";
}

<div class="container py-5 mt-5 text-center" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0" style="border-radius:15px; overflow:hidden;">
                <div class="card-body p-5 text-center">
                    @if (ViewBag.StatusMessage.Contains("شكراً"))
                    {
                        <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #10b981;"></i>
                        <h3 class="mt-3 mb-4" style="color: #0f172a; font-weight: 700;">تم تأكيد الحساب بنجاح</h3>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill" style="font-size: 4rem; color: #ef4444;"></i>
                        <h3 class="mt-3 mb-4" style="color: #0f172a; font-weight: 700;">مشكلة في التأكيد</h3>
                    }

                    <p class="text-muted mb-4" style="font-size: 16px;">
                        @ViewBag.StatusMessage
                    </p>

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn text-white px-5 py-2"
                            style="background-color: #1A8CB0; border-radius: 8px; font-weight: 500;">
                            الذهاب لتسجيل الدخول
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
