@model Product

<h2>تعديل منتج</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name">الاسم</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price">السعر</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description">الوصف</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl">رابط الصورة</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId">الفئة</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>

     <div class="form-check mb-3">
        <input asp-for="IsPreferredSweet" class="form-check-input" />
        <label asp-for="IsPreferredSweet" class="form-check-label">حلوى مفضلة</label>
    </div>

     <div class="form-check mb-3">
        <input asp-for="InStock" class="form-check-input" />
        <label asp-for="InStock" class="form-check-label">متوفر بالمخزون</label>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
