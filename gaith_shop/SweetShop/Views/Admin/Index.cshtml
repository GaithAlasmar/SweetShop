@model IEnumerable<Product>

<h2>إدارة المنتجات</h2>
<a asp-action="Add" class="btn btn-primary mb-3">إضافة حلوى جديدة</a>

<table class="table">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>السعر</th>
            <th>الفئة</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("c")</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
