@{
    ViewData["Title"] = "تأكيد الطلب";
}

<div class="container py-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-white text-center py-4" style="background-color: #28a745;">
                    <h3 class="mb-0"><i class="bi bi-check-circle-fill ms-2"></i>تم استلام طلبك بنجاح!</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>

                    <h4 class="mb-4" style="color: #008CBA;">@ViewBag.SuccessMessage</h4>

                    @if (ViewBag.OrderSummary != null)
                    {
                        <div class="alert alert-light border text-end p-4 mt-4">
                            <h5 class="border-bottom pb-2 mb-3" style="color: #008CBA;">
                                <i class="bi bi-file-text ms-2"></i>ملخص الطلب
                            </h5>
                            <pre class="mb-0"
                                style="white-space: pre-wrap; font-family: 'Readex Pro', sans-serif; text-align: right; direction: rtl;">@ViewBag.OrderSummary</pre>
                        </div>
                    }

                    <div class="mt-5">
                        <a asp-action="Index" class="btn btn-lg px-5 py-3 text-white fw-bold ms-2"
                            style="background-color: #008CBA; border: none; border-radius: 10px;">
                            <i class="bi bi-plus-circle ms-2"></i>طلب جديد
                        </a>
                        <a asp-controller="Home" asp-action="Index"
                            class="btn btn-lg btn-outline-secondary px-5 py-3 fw-bold" style="border-radius: 10px;">
                            <i class="bi bi-house ms-2"></i>العودة للرئيسية
                        </a>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <h6 class="alert-heading"><i class="bi bi-info-circle ms-2"></i>ماذا بعد؟</h6>
                <ul class="mb-0">
                    <li>سيتصل بك أحد ممثلي خدمة العملاء خلال 24 ساعة</li>
                    <li>سيتم تأكيد التفاصيل النهائية للطلب معك</li>
                    <li>سيتم إبلاغك بالسعر الإجمالي وموعد التسليم</li>
                </ul>
            </div>
        </div>
    </div>
</div>
