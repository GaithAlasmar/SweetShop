@model SweetShop.ViewModels.BulkOrderViewModel

@{
    ViewData["Title"] = "طلبيات الكميات - طلبيات للمناسبات والحفلات";
}

<div class="container py-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Page Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold" style="color: #008CBA;">طلبيات الكميات الكبيرة</h1>
                <p class="lead text-muted">اطلب كميات كبيرة من الحلويات للمناسبات والحفلات</p>
                <a asp-action="Create" class="btn btn-outline-primary btn-lg mt-2">
                    <i class="bi bi-search ms-1"></i>طلب جديد بالبحث
                </a>
            </div>

            <!-- Order Form Card -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-white text-center py-4" style="background-color: #008CBA;">
                    <h3 class="mb-0"><i class="bi bi-clipboard-check ms-2"></i>نموذج الطلب</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="SubmitOrder" method="post">
                        <!-- Customer Information Section -->
                        <div class="mb-5">
                            <h4 class="border-bottom pb-2 mb-4" style="color: #008CBA;">
                                <i class="bi bi-person-fill ms-2"></i>معلومات العميل
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="CustomerName" class="form-label fw-bold"></label>
                                    <input asp-for="CustomerName" class="form-control form-control-lg"
                                        placeholder="أدخل اسمك الكامل" />
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                    <input asp-for="PhoneNumber" class="form-control form-control-lg"
                                        placeholder="07xxxxxxxx" dir="ltr" style="text-align: right;" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="EventDate" class="form-label fw-bold"></label>
                                    <input asp-for="EventDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="EventDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="AdditionalNotes" class="form-label fw-bold"></label>
                                    <textarea asp-for="AdditionalNotes" class="form-control" rows="3"
                                        placeholder="أي ملاحظات أو طلبات خاصة..."></textarea>
                                    <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Product Categories Section -->
                        <div class="mb-5">
                            <h4 class="border-bottom pb-2 mb-4" style="color: #008CBA;">
                                <i class="bi bi-list-check ms-2"></i>حدد الكميات المطلوبة
                            </h4>
                            <div class="alert alert-info" role="alert">
                                <i class="bi bi-info-circle ms-2"></i>
                                حدد الكمية المطلوبة لكل صنف (يمكنك ترك الكمية صفر للأصناف غير المطلوبة)
                            </div>

                            @for (int i = 0; i < Model.CategoryItems.Count; i++)
                            {
                                <input type="hidden" asp-for="CategoryItems[i].CategoryId" />
                                <input type="hidden" asp-for="CategoryItems[i].CategoryName" />

                                <div class="row g-3 align-items-center mb-3 p-3 border rounded"
                                    style="background-color: #f8f9fa;">
                                    <div class="col-md-4">
                                        <h5 class="mb-0 fw-bold" style="color: #333;">
                                            @Model.CategoryItems[i].CategoryName
                                        </h5>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="CategoryItems[i].Quantity" class="form-label fw-bold">الكمية</label>
                                        <input asp-for="CategoryItems[i].Quantity" class="form-control" type="number"
                                            min="0" max="1000" step="0.5" placeholder="0" />
                                        <span asp-validation-for="CategoryItems[i].Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="CategoryItems[i].Unit" class="form-label fw-bold">الوحدة</label>
                                        <select asp-for="CategoryItems[i].Unit" class="form-select">
                                            <option value="كيلو">كيلو</option>
                                            <option value="صينية">صينية</option>
                                            <option value="قطعة">قطعة</option>
                                        </select>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-lg px-5 py-3 text-white fw-bold"
                                style="background-color: #008CBA; border: none; border-radius: 10px; font-size: 1.2rem;">
                                <i class="bi bi-send-fill ms-2"></i>إرسال الطلب
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="alert alert-warning mt-4" role="alert">
                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle ms-2"></i>ملاحظة هامة</h5>
                <p class="mb-0">
                    سيتم التواصل معكم خلال 24 ساعة لتأكيد الطلب والاتفاق على التفاصيل النهائية والأسعار.
                    الطلبيات الكبيرة تحتاج إلى حجز مسبق بـ 3-5 أيام على الأقل.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
