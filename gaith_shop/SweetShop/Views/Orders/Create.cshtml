    <script>
        $(document).ready(function () {
            var items = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model?.Items ?? new List<SweetShop.ViewModels.OrderItemViewModel>(), new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));

            // Render existing items immediately if we came back from a validation error
            if (items.length > 0) {
                renderTable();
            }

            // ─── Initialize Select2 ───
            $('#productSearch').select2({
                theme: 'bootstrap-5',
                placeholder: typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'Type product name to search...' : 'اكتب اسم المنتج للبحث...',
                allowClear: true,
                dir: 'rtl',
                minimumInputLength: 1,
                ajax: {
                    url: '@Url.Action("SearchProducts", "Orders")',
                    dataType: 'json',
                    delay: 300,
                    data: function (params) {
                        return { term: params.term };
                    },
                    processResults: function (data) {
                        return {
                            results: data.map(function (item) {
                                return {
                                    id: item.id,
                                    text: item.text,
                                    price: item.price
                                };
                            })
                        };
                    },
                    cache: true
                },
                templateResult: function (data) {
                    if (data.loading) return data.text;
                    var $el = $('<div style="display:flex; justify-content:space-between; align-items:center;">' +
                        '<span style="font-weight:600;">' + data.text + '</span>' +
                        '<span style="color:#C7AE6A; font-weight:700; font-size:0.85rem;">' +
                        parseFloat(data.price).toFixed(2) + ' د.أ</span></div>');
                    return $el;
                },
                templateSelection: function (data) {
                    if (!data.id) return data.text;
                    return data.text + ' — ' + parseFloat(data.price).toFixed(2) + ' د.أ';
                }
            });

            // ─── Add Item ───
            $('#addItemBtn').on('click', function () {
                var selectedData = $('#productSearch').select2('data')[0];
                var quantity = parseFloat($('#itemQuantity').val());
                var unit = $('#itemUnit').val();

                // Validate
                if (!selectedData || !selectedData.id) {
                    showError(typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'Please select a product from the list' : 'الرجاء اختيار منتج من القائمة');
                    return;
                }
                if (!quantity || quantity <= 0) {
                    showError(typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'Please enter a valid quantity' : 'الرجاء إدخال كمية صحيحة');
                    return;
                }

                // Check for duplicate
                var duplicate = items.find(function (i) { return i.productId == selectedData.id; });
                if (duplicate) {
                    showError(typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'This product is already added. You can remove it and add it again with a different quantity.' : 'هذا المنتج مضاف مسبقاً. يمكنك حذفه وإعادة إضافته بكمية مختلفة.');
                    return;
                }

                hideError();

                // Add to items array
                var item = {
                    productId: parseInt(selectedData.id),
                    productName: selectedData.text,
                    quantity: quantity,
                    unit: unit,
                    price: parseFloat(selectedData.price)
                };
                items.push(item);

                renderTable();
                resetInputs();
            });

            // ─── Render Table ───
            function renderTable() {
                var tbody = $('#itemsBody');
                var hiddenInputs = $('#hiddenInputs');
                tbody.empty();
                hiddenInputs.empty();

                if (items.length === 0) {
                    $('#emptyState').removeClass('d-none');
                    $('#itemsTableWrapper').addClass('d-none');
                    $('#submitBtn').prop('disabled', true);
                    $('#itemCount').text('0');
                    return;
                }

                $('#emptyState').addClass('d-none');
                $('#itemsTableWrapper').removeClass('d-none');
                $('#submitBtn').prop('disabled', false);
                $('#itemCount').text(items.length);

                var total = 0;

                items.forEach(function (item, index) {
                    var lineTotal = item.price * item.quantity;
                    total += lineTotal;

                    // Table row
                    var unitKey = item.unit === 'كيلو' ? 'orders.unit.kilo' : item.unit === 'صينية' ? 'orders.unit.tray' : item.unit === 'قطعة' ? 'orders.unit.piece' : item.unit === 'حبة' ? 'orders.unit.item' : item.unit === 'علبة' ? 'orders.unit.pack' : '';
                    var unitTranslation = typeof I18n !== 'undefined' && I18n.translations[unitKey] ? (I18n.getSaved() === 'en' ? I18n.translations[unitKey].en : item.unit) : item.unit;
                    var nameTranslation = typeof I18n !== 'undefined' && I18n.translations[item.productName] ? (I18n.getSaved() === 'en' ? I18n.translations[item.productName].en : item.productName) : item.productName;
                    var currTranslation = typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'JOD' : 'د.أ';

                    var row = '<tr class="so-row-enter">' +
                        '<td class="text-muted">' + (index + 1) + '</td>' +
                        '<td class="product-name" data-i18n="' + item.productName + '">' + nameTranslation + '</td>' +
                        '<td>' + item.quantity + '</td>' +
                        '<td><span class="badge" style="background:#E6F3FB; color:#1A8CB0; font-weight:600; padding:6px 12px; border-radius:8px;" data-i18n="' + unitKey + '">' + unitTranslation + '</span></td>' +
                        '<td>' + item.price.toFixed(2) + ' <span data-i18n="currency.jod">' + currTranslation + '</span></td>' +
                        '<td class="line-total">' + lineTotal.toFixed(2) + ' <span data-i18n="currency.jod">' + currTranslation + '</span></td>' +
                        '<td><button type="button" class="so-remove-btn" data-index="' + index + '" title="حذف">' +
                        '<i class="bi bi-trash3-fill"></i></button></td>' +
                        '</tr>';
                    tbody.append(row);

                    // Hidden inputs for model binding
                    hiddenInputs.append('<input type="hidden" name="Items[' + index + '].ProductId" value="' + item.productId + '" />');
                    hiddenInputs.append('<input type="hidden" name="Items[' + index + '].ProductName" value="' + item.productName + '" />');
                    hiddenInputs.append('<input type="hidden" name="Items[' + index + '].Quantity" value="' + item.quantity + '" />');
                    hiddenInputs.append('<input type="hidden" name="Items[' + index + '].Unit" value="' + item.unit + '" />');
                    hiddenInputs.append('<input type="hidden" name="Items[' + index + '].Price" value="' + item.price + '" />');
                });

                var currTranslation = typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'JOD' : 'د.أ';
                $('#totalPrice').html(total.toFixed(2) + ' <span data-i18n="currency.jod">' + currTranslation + '</span>');
            }

            // ─── Remove item (event delegation) ───
            $(document).on('click', '.so-remove-btn', function () {
                var index = $(this).data('index');
                items.splice(index, 1);
                renderTable();
            });

            // ─── Reset Inputs ───
            function resetInputs() {
                $('#productSearch').val(null).trigger('change');
                $('#itemQuantity').val(1);
                $('#itemUnit').val('كيلو');
            }

            // ─── Error Handling ───
            function showError(message) {
                $('#errorText').text(message);
                $('#addItemError').removeClass('d-none');
                setTimeout(function () { hideError(); }, 4000);
            }

            function hideError() {
                $('#addItemError').addClass('d-none');
            }

            $('#orderForm').on('submit', function (e) {
                if (items.length === 0) {
                    e.preventDefault();
                    showError(typeof I18n !== 'undefined' && I18n.getSaved() === 'en' ? 'Please add at least one product before submitting the order' : 'الرجاء إضافة منتج واحد على الأقل قبل إرسال الطلب');
                    return;
                }

                // If using jQuery validation on client side, check if valid
                if ($(this).valid && !$(this).valid()) {
                    return; // Prevent spinner if validation fails
                }

                // Show loading spinner
                var btn = $(this).find('.so-btn-submit');
                btn.css('pointer-events', 'none');
                btn.find('.btn-text').css('opacity', '0');
                btn.find('#submitSpinner').removeClass('d-none');
            });
        });
    </script>
