@model ShoppingCartViewModel

<h2>سلة المشتريات الخاصة بك</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الكمية</th>
            <th>الحلوى</th>
            <th class="text-end">السعر</th>
            <th class="text-end">المجموع الفرعي</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-start">@line.Product.Name</td>
                <td class="text-end">@line.Product.Price.ToString("c")</td>
                <td class="text-end">@((line.Amount * line.Product.Price).ToString("c"))</td>
                <td class="text-center"><a class="btn btn-danger" asp-controller="ShoppingCart"
                        asp-action="RemoveFromShoppingCart" asp-route-productId="@line.Product.Id">إزالة</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end">المجموع:</td>
            <td class="text-end">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary btn-checkout-custom" asp-controller="Order" asp-action="Checkout">إتمام الشراء الآن!</a>
</div>
