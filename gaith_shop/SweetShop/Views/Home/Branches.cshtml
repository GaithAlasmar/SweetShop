@model List<SweetShop.ViewModels.BranchViewModel>

@{
    ViewData["Title"] = "فروعنا";
}

<div class="branches-page" dir="rtl">

    <!-- ══════════════ HERO BANNER ══════════════ -->
    <div class="br-hero">
        <div class="br-hero-content">
            <div class="br-hero-icon">
                <i class="bi bi-geo-alt-fill"></i>
            </div>
            <h1>فروعنا</h1>
            <p>تفضلوا بزيارتنا في أقرب فرع إليكم</p>
        </div>
    </div>

    <div class="container py-5">
        <div class="row g-4 justify-content-center">
            @foreach (var branch in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="br-card">
                        <!-- Image -->
                        <div class="br-card-img-wrapper">
                            <img src="@branch.PhotoUrl" alt="@branch.Name" class="br-card-img" />
                            <div class="br-card-img-overlay">
                                <span class="br-open-badge">
                                    <i class="bi bi-clock-fill ms-1"></i> مفتوح الآن
                                </span>
                            </div>
                        </div>

                        <!-- Body -->
                        <div class="br-card-body">
                            <h4 class="br-card-title">@branch.Name</h4>

                            <div class="br-info-row">
                                <div class="br-info-icon"><i class="bi bi-pin-map-fill"></i></div>
                                <span>@branch.Address</span>
                            </div>

                            <div class="br-info-row">
                                <div class="br-info-icon"><i class="bi bi-telephone-fill"></i></div>
                                <span dir="ltr">@branch.PhoneNumber</span>
                            </div>

                            <div class="br-info-row">
                                <div class="br-info-icon"><i class="bi bi-clock-fill"></i></div>
                                <span>@branch.WorkingHours</span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="br-card-actions">
                            <a href="@branch.GoogleMapsDirectionUrl" target="_blank" class="btn br-btn-map">
                                <i class="bi bi-geo-alt-fill ms-1"></i> الموقع
                            </a>
                            <a href="tel:@branch.PhoneNumber.Replace(" ", "")" class="btn br-btn-call">
                                <i class="bi bi-telephone-fill ms-1"></i> اتصل بنا
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* ═══════════════════════════════════════════
               BRANCHES PAGE — MODERN LUXURY THEME
               Colors: #1A8CB0, #C7AE6A, #E6F3FB
               ═══════════════════════════════════════════ */

        .branches-page {
            font-family: 'Readex Pro', 'Segoe UI', Tahoma, sans-serif;
            background-color: #f4f7fa;
            min-height: 100vh;
        }

        /* ─── HERO ─── */
        .br-hero {
            position: relative;
            background: linear-gradient(135deg, #1A8CB0 0%, #156d8a 50%, #0f4f65 100%);
            padding: 60px 0 50px;
            text-align: center;
            overflow: hidden;
        }

        .br-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(199, 174, 106, 0.15) 0%, transparent 70%);
            border-radius: 50%;
        }

        .br-hero-content {
            position: relative;
            z-index: 2;
        }

        .br-hero-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            margin-bottom: 20px;
            border: 2px solid rgba(199, 174, 106, 0.4);
        }

        .br-hero-icon i {
            font-size: 2.2rem;
            color: #C7AE6A;
        }

        .br-hero h1 {
            color: #fff;
            font-size: 2.4rem;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .br-hero p {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1.1rem;
        }

        /* ─── CARD ─── */
        .br-card {
            background: #fff;
            border-radius: 18px;
            overflow: hidden;
            border: 1px solid rgba(26, 140, 176, 0.08);
            box-shadow: 0 2px 16px rgba(0, 0, 0, 0.06);
            transition: transform 0.35s ease, box-shadow 0.35s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .br-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(199, 174, 106, 0.3);
        }

        /* ─── CARD IMAGE ─── */
        .br-card-img-wrapper {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

        .br-card-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .br-card:hover .br-card-img {
            transform: scale(1.08);
        }

        .br-card-img-overlay {
            position: absolute;
            top: 16px;
            right: 16px;
        }

        .br-open-badge {
            background: rgba(26, 140, 176, 0.9);
            color: #fff;
            font-size: 0.78rem;
            font-weight: 600;
            padding: 6px 14px;
            border-radius: 50px;
            backdrop-filter: blur(4px);
        }

        /* ─── CARD BODY ─── */
        .br-card-body {
            padding: 24px;
            flex: 1;
        }

        .br-card-title {
            font-size: 1.2rem;
            font-weight: 800;
            color: #1A8CB0;
            margin-bottom: 18px;
            padding-bottom: 14px;
            border-bottom: 2px solid rgba(199, 174, 106, 0.25);
        }

        .br-info-row {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 14px;
            font-size: 0.9rem;
            color: #4a5568;
            line-height: 1.6;
        }

        .br-info-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 34px;
            height: 34px;
            background: #E6F3FB;
            border-radius: 10px;
            flex-shrink: 0;
        }

        .br-info-icon i {
            font-size: 0.9rem;
            color: #1A8CB0;
        }

        /* ─── CARD ACTIONS ─── */
        .br-card-actions {
            display: flex;
            gap: 10px;
            padding: 0 24px 24px;
        }

        .br-btn-map {
            flex: 1;
            background: linear-gradient(135deg, #1A8CB0, #156d8a);
            color: #fff;
            font-weight: 700;
            font-size: 0.9rem;
            border: none;
            border-radius: 12px;
            padding: 10px 16px;
            transition: all 0.3s ease;
        }

        .br-btn-map:hover {
            background: linear-gradient(135deg, #156d8a, #0f4f65);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(26, 140, 176, 0.35);
        }

        .br-btn-call {
            flex: 1;
            background: linear-gradient(135deg, #C7AE6A, #b39b5b);
            color: #fff;
            font-weight: 700;
            font-size: 0.9rem;
            border: none;
            border-radius: 12px;
            padding: 10px 16px;
            transition: all 0.3s ease;
        }

        .br-btn-call:hover {
            background: linear-gradient(135deg, #b39b5b, #a08b4e);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(199, 174, 106, 0.35);
        }

        /* ─── RESPONSIVE ─── */
        @@media (max-width: 576px) {
            .br-hero {
                padding: 40px 16px 35px;
            }

            .br-hero h1 {
                font-size: 1.8rem;
            }

            .br-card-img-wrapper {
                height: 180px;
            }

            .br-card-body {
                padding: 18px;
            }

            .br-card-actions {
                flex-direction: column;
                padding: 0 18px 18px;
            }
        }
    </style>
}
