@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    .footer-custom {
        background-color: #1A8CB0;
        /* User requested Blue */
        padding-top: 3rem;
        padding-bottom: 2rem;
        font-family: 'Readex Pro', sans-serif;
        position: relative;
        overflow: hidden;
        color: #C7AE6A;
        /* User requested Gold font */
        text-align: right;
    }

    /* Watermark Logo */
    .footer-custom::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        /* Large size */
        height: 80%;
        background-image: url('/images/logo.png');
        /* Assuming this path */
        background-repeat: no-repeat;
        background-position: center;
        background-size: contain;
        opacity: 0.1;
        /* Faint watermark */
        z-index: 0;
        pointer-events: none;
    }

    /* Ensure content is above watermark */
    .footer-custom .container-fluid {
        position: relative;
        z-index: 1;
    }

    .footer-custom h5 {
        color: #C7AE6A;
        /* Gold */
        font-weight: bold;
        margin-bottom: 1rem;
        position: relative;
        display: inline-block;
    }

    .footer-custom h5::after {
        content: '';
        display: block;
        width: 50px;
        height: 2px;
        background-color: #C7AE6A;
        margin-top: 5px;
    }

    .footer-custom p,
    .footer-custom span,
    .footer-custom td {
        color: #fff;
        /* White text for readability on blue, keeping headings Gold */
    }

    .footer-custom a {
        color: #e0e0e0;
        /* Light grey/white for links */
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-custom a:hover {
        color: #C7AE6A;
        /* Gold on hover */
    }

    .social-icon {
        font-size: 1.5rem;
        color: #fff;
        /* White base */
        margin-left: 15px;
        transition: color 0.3s ease;
        text-decoration: none;
    }

    .social-icon:hover {
        color: #C7AE6A;
        /* Gold on hover */
    }

    #scrollToTopBtn {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 99;
        width: 45px;
        height: 45px;
        border: none;
        outline: none;
        background-color: #C7AE6A;
        /* Gold button on blue theme? Or keep blue? User didn't specify button color, but gold contrasts well on the page if footer is blue. Let's try Gold. */
        color: #1A8CB0;
        /* Blue icon */
        cursor: pointer;
        padding: 0;
        display: none;
        transition: opacity 0.3s, background-color 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #scrollToTopBtn:hover {
        background-color: #bfa055;
    }

    /* Contact Link Hover Effect */
    .contact-link {
        transition: all 0.3s ease;
    }

    .contact-link:hover span {
        color: #C7AE6A !important;
        /* Gold on hover */
    }

    /* Responsive Adjustments for Desktop Offsets */
    @@media(min-width: 992px) {
        .footer-offset-col-2 {
            padding-right: 35px;
        }

        .footer-offset-col-3 {
            transform: translateX(50px);
        }

        .footer-offset-title-3 {
            padding-right: 40px;
        }

        .footer-offset-col-4 {
            padding-right: 110px;
        }
    }
</style>

