@using SweetShop.Models
@inject ShoppingCart _shoppingCart

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - حلويات الاسمر </title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@160..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SweetShop.styles.css" asp-append-version="true" />
    <!-- AOS — Animate On Scroll (global) -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="top-header bg-light-blue text-dark border-bottom"
            style="padding-top: 9px; padding-bottom: 8px; font-size: 12px;">
            <div class="container-fluid d-flex justify-content-between align-items-center flex-wrap"
                style="padding-left: 120px; padding-right: 120px;">
                <!-- Left Side: Email & Phone -->
                <div class="d-flex align-items-center header-divider-group" style="gap: 10px;">
                    <a href="mailto:info@sweetshop.com" class="text-decoration-none topbar-contact-link">
                        <i class="bi bi-envelope-fill text-primary-custom me-1"></i><span
                            data-i18n="topbar.email.label"> البريد :</span>
                        info@sweetshop.com
                    </a>
                    <a href="tel:+962791234567" class="text-decoration-none topbar-contact-link">
                        <i class="bi bi-telephone-fill text-primary-custom me-1"></i><span
                            data-i18n="topbar.phone.label"> الهاتف :</span>
                        <span dir="ltr">+962 79 123 4567</span>
                    </a>
                </div>

                <!-- Right Side: Language, Country, Currency -->
                <div class="d-flex align-items-center header-divider-group" style="gap: 10px;">
                    <!-- Language Switcher Dropdown -->
                    <div class="lang-switcher" id="langSwitcher">
                        <button class="lang-switcher-btn" id="langSwitcherBtn" aria-haspopup="true"
                            aria-expanded="false" aria-label="اختر اللغة">
                            <i class="bi bi-globe2"></i>
                            <span id="langSwitcherLabel" data-i18n="topbar.lang">العربية</span>
                            <i class="bi bi-chevron-down lang-chevron"></i>
                        </button>
                        <ul class="lang-dropdown" id="langDropdown" role="menu">
                            <li>
                                <button class="lang-option lang-option--active" role="menuitem" data-lang="ar"
                                    data-dir="rtl" data-action="@Url.Action("SetLanguage", "Home")"
                                    onclick="switchLanguage(this)">
                                    <span class="lang-flag">🇯🇴</span> العربية
                                </button>
                            </li>
                            <li>
                                <button class="lang-option" role="menuitem" data-lang="en" data-dir="ltr"
                                    data-action="@Url.Action("SetLanguage", "Home")" onclick="switchLanguage(this)">
                                    <span class="lang-flag">🇬🇧</span> English
                                </button>
                            </li>
                        </ul>
                    </div>
                    <!-- Currency Switcher Dropdown (NEW) -->
                    <div class="lang-switcher" id="currencySwitcher">
                        <button class="lang-switcher-btn" id="currencyDropdownBtn" aria-haspopup="true"
                            aria-expanded="false" aria-label="اختر العملة">
                            <span id="selectedCurrencyName">الأردن</span>
                            <img id="selectedCurrencyFlag" src="https://flagcdn.com/w20/jo.png" alt="Country Flag"
                                width="20" class="mx-1">
                            <span class="mx-1">|</span>
                            <span id="selectedCurrencyCode" class="text-primary-custom fw-bold">دينار أردني</span>
                            <i class="bi bi-chevron-down lang-chevron ms-1"></i>
                        </button>
                        <ul class="lang-dropdown" id="currencyDropdown" role="menu" style="min-width: 200px;">
                            <li>
                                <button class="lang-option currency-option" role="menuitem" data-currency="JOD"
                                    onclick="Currency.apply('JOD'); switchCurrencyUI(this)">
                                    <span class="lang-flag"><img src="https://flagcdn.com/w20/jo.png" width="20"></span>
                                    الأردن (JOD)
                                </button>
                            </li>
                            <li>
                                <button class="lang-option currency-option" role="menuitem" data-currency="USD"
                                    onclick="Currency.apply('USD'); switchCurrencyUI(this)">
                                    <span class="lang-flag"><img src="https://flagcdn.com/w20/us.png" width="20"></span>
                                    دولار أمريكي (USD)
                                </button>
                            </li>
                            <li>
                                <button class="lang-option currency-option" role="menuitem" data-currency="AED"
                                    onclick="Currency.apply('AED'); switchCurrencyUI(this)">
                                    <span class="lang-flag"><img src="https://flagcdn.com/w20/ae.png" width="20"></span>
                                    درهم إماراتي (AED)
                                </button>
                            </li>
                            <li>
                                <button class="lang-option currency-option" role="menuitem" data-currency="SAR"
                                    onclick="Currency.apply('SAR'); switchCurrencyUI(this)">
                                    <span class="lang-flag"><img src="https://flagcdn.com/w20/sa.png" width="20"></span>
                                    ريال سعودي (SAR)
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- ════════════════════════════════════════════
             MAIN HEADER — Luxury Redesign
        ════════════════════════════════════════════ -->
        <div class="mh-wrap" dir="rtl">
            <div class="mh-inner">

                <!-- ── Right: Logo ── -->
                <a asp-controller="Home" asp-action="Index" class="mh-logo-link">
                    <span class="mh-logo-default">
                        <img src="~/images/logo.png" alt="حلويات الاسمر" class="mh-logo-img">
                        <span class="mh-brand" style="font-size: 28px; font-weight: bold;">حلويات الاسمر</span>
                    </span>
                    <img src="~/images/sticky-logo.png" alt="Sticky Logo" class="mh-logo-sticky d-none">
                </a>

                <!-- ── Center: Pill Search Bar ── -->
                <div class="mh-search-wrap">
                    <form asp-controller="Product" asp-action="Search" method="get" class="mh-search-form">
                        <input name="q" type="search" class="mh-search-input"
                            placeholder="ابحث عن حلويات، كنافة، كعك..." data-i18n-placeholder="header.search.ph"
                            aria-label="بحث">
                        <button type="submit" class="mh-search-btn" aria-label="بحث">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>

                <!-- ── Left: Account & Cart ── -->
                <div class="mh-actions">

                    <!-- Account -->
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login" class="mh-action-btn">
                            <i class="bi bi-person-fill mh-icon" style="color: #1A8CB0;"></i>
                            <span class="mh-action-label d-none d-lg-inline" data-i18n="header.account">حسابي</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="mh-action-btn">
                            <i class="bi bi-person mh-icon"></i>
                            <span class="mh-action-label d-none d-lg-inline" data-i18n="header.account">حسابي</span>
                        </a>
                    }

                    <!-- Cart -->
                    <a href="#" class="mh-action-btn mh-cart-btn" data-bs-toggle="offcanvas"
                        data-bs-target="#cartOffcanvas" onclick="loadCart()">
                        <span class="mh-cart-icon-wrap">
                            <i class="bi bi-bag mh-icon"></i>
                            <span id="cart-badge" class="mh-badge">
                                @_shoppingCart.GetShoppingCartTotalCount()
                            </span>
                        </span>
                        <span class="mh-action-label d-none d-lg-inline" data-i18n="header.cart">عربتي</span>
                    </a>

                </div>

                <!-- ── Sticky elements (hidden by default, JS toggles them) ── -->
                <div class="sticky-center-logo d-none justify-content-center align-items-center position-absolute"
                    style="left: 50%; transform: translateX(-50%);">
                    <img src="~/images/theName.png" alt="حلويات عربية" style="height: 65px;">
                </div>

                <div class="sticky-extras d-none align-items-center" style="gap: 35px;">
                    <!-- Language Dropdown in Sticky Header -->
                    <div class="dropdown">
                        <a href="#" class="fw-bold text-decoration-none dropdown-toggle" style="color: #1A8CB0;"
                            id="stickyLangDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe2"></i> <span data-i18n="topbar.lang">العربية</span>
                        </a>
                        <ul class="dropdown-menu text-end" aria-labelledby="stickyLangDropdown"
                            style="min-width: unset;">
                            <li>
                                <button class="dropdown-item" data-lang="ar" data-dir="rtl"
                                    data-action="@Url.Action("SetLanguage", "Home")" onclick="switchLanguage(this)">
                                    العربية
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item" data-lang="en" data-dir="ltr"
                                    data-action="@Url.Action("SetLanguage", "Home")" onclick="switchLanguage(this)">
                                    English
                                </button>
                            </li>
                        </ul>
                    </div>
                    <a href="#" class="position-relative" style="color: #1A8CB0;" data-bs-toggle="offcanvas"
                        data-bs-target="#cartOffcanvas" onclick="loadCart()">
                        <i class="bi bi-cart fs-5"></i>
                        <span id="sticky-cart-badge"
                            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                            style="font-size:0.5rem;padding:0.2em 0.35em;">
                            @_shoppingCart.GetShoppingCartTotalCount()
                        </span>
                    </a>
                    <a href="#" style="color:#1A8CB0;" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="bi bi-search fs-5"></i>
                    </a>
                    <a href="tel:+962791234567" style="color:#1A8CB0;"><i class="bi bi-telephone-fill fs-5"></i></a>
                </div>

                <div class="sticky-categories d-none align-items-center position-absolute" style="right:80px;">
                    <div class="dropdown">
                        <button class="btn d-flex align-items-center gap-2 px-3 py-2"
                            style="background:#1A8CB0;color:white;border:none;border-radius:5px;" type="button"
                            id="stickyCategoriesDropdown" data-bs-toggle="dropdown" data-bs-auto-close="false"
                            aria-expanded="false">
                            <i class="bi bi-list fs-5"></i><span data-i18n="nav.all">جميع الأصناف</span>
                        </button>
                        <ul class="dropdown-menu text-end" aria-labelledby="stickyCategoriesDropdown">
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="حلويات عربية" data-i18n="nav.arabic">حلويات عربية</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="كنافة" data-i18n="nav.kunafa">كنافة</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="الحلويات الغربية" data-i18n="nav.western">الحلويات الغربية</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="الشوكلاتة والهدايا" data-i18n="nav.chocolate">الشوكلاتة
                                    والهدايا</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="عبوات خاصة" data-i18n="nav.special">عبوات خاصة</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="List"
                                    asp-route-category="بوظة" data-i18n="nav.ice">بوظة</a></li>
                        </ul>
                    </div>
                </div>

                <div class="sticky-user-icon d-none align-items-center position-absolute" style="right:20px;">
                    <a asp-controller="Account" asp-action="Login"
                        style="width:45px;height:45px;background:#1A8CB0;border-radius:50%;text-decoration:none;"
                        class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-person-fill fs-4 text-white"></i>
                    </a>
                </div>

            </div><!-- /mh-inner -->
        </div><!-- /mh-wrap -->

        <!-- Mobile search bar (below logo/icons row on phones) -->
        <div class="mh-mobile-search d-md-none">
            <form asp-controller="Product" asp-action="Search" method="get" class="mh-search-form">
                <input name="q" type="search" class="mh-search-input" placeholder="ابحث عن حلويات..." aria-label="بحث">
                <button type="submit" class="mh-search-btn" aria-label="بحث">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>

    </header>


    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Product" asp-action="Search" method="get" class="d-flex">
                        <input name="q" class="form-control me-2" type="search" placeholder="ابحث عن منتج..."
                            aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">بحث</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ════════════════════════════════════════════
         CATEGORIES NAV BAR — Luxury Minimalist
    ════════════════════════════════════════════ -->
    <nav class="cn-bar" dir="rtl" aria-label="تصفح الأقسام">
        <!-- Off-canvas (mobile) -->
        <div class="offcanvas offcanvas-end cn-offcanvas" tabindex="-1" id="cnOffcanvas" dir="rtl">
            <div class="offcanvas-header cn-oc-header">
                <h5 class="offcanvas-title"><i class="bi bi-grid-fill" style="color:#178ca4"></i> <span
                        data-i18n="nav.browseCategories">تصفح الأقسام</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="إغلاق"></button>
            </div>
            <div class="offcanvas-body p-0">
                <ul class="cn-mob-links">
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List"
                            asp-route-category="حلويات عربية"><i class="bi bi-star-fill"></i><span
                                data-i18n="nav.arabic">حلويات
                                عربية</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List" asp-route-category="كنافة"><i
                                class="bi bi-grid-fill"></i><span data-i18n="nav.kunafa">كنافة</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List"
                            asp-route-category="الحلويات الغربية"><i class="bi bi-cake2-fill"></i><span
                                data-i18n="nav.western">الحلويات
                                الغربية</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List"
                            asp-route-category="الشوكلاتة والهدايا"><i class="bi bi-gift-fill"></i><span
                                data-i18n="nav.chocolate">الشوكلاتة
                                والهدايا</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List"
                            asp-route-category="عبوات خاصة"><i class="bi bi-box-seam-fill"></i><span
                                data-i18n="nav.special">عبوات
                                خاصة</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Product" asp-action="List" asp-route-category="بوظة"><i
                                class="bi bi-snow2"></i><span data-i18n="nav.ice">بوظة</span></a></li>
                    <li class="cn-mob-sep"></li>
                    <li><a class="cn-mob-link" asp-controller="Orders" asp-action="Create"><i
                                class="bi bi-bag-check-fill"></i><span data-i18n="nav.orders">طلبيات</span></a></li>
                    <li><a class="cn-mob-link" asp-controller="Home" asp-action="Branches"><i
                                class="bi bi-geo-alt-fill"></i><span data-i18n="nav.branches">فروعنا</span></a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="cn-mob-sep"></li>
                        <li><a class="cn-mob-link" style="color:#178ca4" asp-controller="Admin" asp-action="Index"><i
                                    class="bi bi-shield-check"></i><span data-i18n="nav.admin">لوحة التحكم</span></a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="cn-inner">

            <!-- ── All Categories Dropdown (desktop) / Off-canvas trigger (mobile) ── -->
            <div class="cn-all-wrap flex-shrink-0">
                <!-- Desktop: dropdown -->
                <div class="dropdown d-none d-md-block">
                    <button class="cn-all-btn" type="button" id="cnDropdown" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="bi bi-list-ul"></i>
                        <span data-i18n="nav.all">جميع الأصناف</span>
                        <i class="bi bi-chevron-down cn-chevron"></i>
                    </button>
                    <ul class="dropdown-menu text-end cn-dropdown-menu" aria-labelledby="cnDropdown">
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="حلويات عربية"><i class="bi bi-star-fill"></i> <span
                                    data-i18n="nav.arabic">حلويات عربية</span></a></li>
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="كنافة"><i class="bi bi-grid-fill"></i> <span
                                    data-i18n="nav.kunafa">كنافة</span></a></li>
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="الحلويات الغربية"><i class="bi bi-cake2-fill"></i> <span
                                    data-i18n="nav.western">الحلويات
                                    الغربية</span></a></li>
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="الشوكلاتة والهدايا"><i class="bi bi-gift-fill"></i> <span
                                    data-i18n="nav.chocolate">الشوكلاتة
                                    والهدايا</span></a></li>
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="عبوات خاصة"><i class="bi bi-box-seam-fill"></i> <span
                                    data-i18n="nav.special">عبوات خاصة</span></a></li>
                        <li><a class="cn-dd-item" asp-controller="Product" asp-action="List"
                                asp-route-category="بوظة"><i class="bi bi-snow2"></i> <span
                                    data-i18n="nav.ice">بوظة</span></a></li>
                    </ul>
                </div><!-- /dropdown -->
                <!-- Mobile: off-canvas trigger -->
                <button class="cn-all-btn d-md-none" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#cnOffcanvas">
                    <i class="bi bi-list-ul"></i>
                    <span data-i18n="nav.all">جميع الأصناف</span>
                </button>
            </div><!-- /cn-all-wrap -->

            <!-- ── Vertical separator ── -->
            <div class="cn-sep"></div>

            <!-- ── Desktop links (hidden on mobile) ── -->
            <div class="cn-links-wrap d-none d-md-flex">
                <ul class="cn-links">
                    <li><a class="cn-link" asp-controller="Product" asp-action="List" asp-route-category="حلويات عربية"
                            data-i18n="nav.arabic">حلويات عربية</a></li>
                    <li><a class="cn-link" asp-controller="Product" asp-action="List" asp-route-category="كنافة"
                            data-i18n="nav.kunafa">كنافة</a></li>
                    <li><a class="cn-link" asp-controller="Product" asp-action="List"
                            asp-route-category="الحلويات الغربية" data-i18n="nav.western">الحلويات الغربية</a></li>
                    <li><a class="cn-link" asp-controller="Product" asp-action="List"
                            asp-route-category="الشوكلاتة والهدايا" data-i18n="nav.chocolate">الشوكلاتة والهدايا</a>
                    </li>
                    <li><a class="cn-link" asp-controller="Product" asp-action="List" asp-route-category="عبوات خاصة"
                            data-i18n="nav.special">عبوات خاصة</a></li>
                    <li><a class="cn-link" asp-controller="Product" asp-action="List" asp-route-category="بوظة"
                            data-i18n="nav.ice">بوظة</a>
                    </li>
                    <li><a class="cn-link" asp-controller="Orders" asp-action="Create" data-i18n="nav.orders">طلبيات</a>
                    </li>
                    <li><a class="cn-link" asp-controller="Home" asp-action="Branches"
                            data-i18n="nav.branches">فروعنا</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a class="cn-link cn-admin-link" asp-controller="Admin" asp-action="Index"
                                data-i18n="nav.admin">
                                لوحة التحكم
                            </a>
                        </li>
                    }
                </ul>
            </div><!-- /cn-links-wrap -->

        </div><!-- /cn-inner -->
    </nav>


    <!-- ── Cart Backdrop Overlay ── -->
    <div id="cartOverlay" class="cart-overlay-backdrop" onclick="closeCartOverlay()"></div>

    <!-- Side Cart Offcanvas -->
    <div class="offcanvas offcanvas-end cart-offcanvas-premium" tabindex="-1" id="cartOffcanvas"
        aria-labelledby="cartOffcanvasLabel">

        <div id="cart-offcanvas-content">
            <!-- Content loaded via AJAX -->
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid px-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/i18n.js" asp-append-version="true"></script>
    <script src="~/js/currency.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
