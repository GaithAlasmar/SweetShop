@model SweetShop.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5 mt-5 text-end" dir="rtl">
    <div class="row align-items-center mb-5">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="object-fit: cover; width: 100%; height: auto;">
        </div>
        <div class="col-md-7 pe-md-5 mt-4 mt-md-0">
            <h1 class="display-5 fw-bold" style="color: #0f172a;">@Model.Name</h1>
            
            <!-- Average Rating -->
            <div class="d-flex align-items-center mb-3">
                <div class="text-warning fs-4 me-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round(Model.AverageRating))
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                </div>
                <span class="text-muted fs-6 ms-2">(@Model.AverageRating.ToString("0.0")) من @Model.TotalReviews تقييم</span>
            </div>

            <p class="lead text-muted mb-4">@Model.Description</p>
            
            <form asp-controller="ShoppingCart" asp-action="AddToShoppingCart" method="get" class="bg-light p-4 rounded shadow-sm">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                
                @if (Model.WeightOptions.Any())
                {
                    <div class="mb-4">
                        <label for="variantSelect" class="form-label fw-bold">اختر الوزن أو الحجم:</label>
                        <select id="variantSelect" name="variantId" class="form-select form-select-lg" asp-items="Model.WeightOptions" asp-for="SelectedVariantId" required>
                        </select>
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <span class="fs-3 fw-bold text-success">@Model.BasePrice.ToString("C")</span>
                    </div>
                }
                
                <button type="submit" class="btn btn-primary btn-lg w-100" style="background-color: #1A8CB0; border: none; border-radius: 8px;">
                    <i class="bi bi-cart-plus me-2"></i> أضف إلى السلة
                </button>
            </form>
        </div>
    </div>

    <!-- Reviews Section -->
    <hr class="my-5" />
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h3 class="mb-4 text-center fw-bold" style="color: #0f172a;">تقييمات العملاء</h3>

            <!-- Review Form -->
            <div class="card shadow-sm mb-5 border-0 bg-light">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">أضف تقييمك الخاص</h5>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Product" asp-action="AddReview" method="post">
                            <input type="hidden" asp-for="ProductId" />
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">التقييم:</label>
                                <div class="rating-stars flex-row-reverse d-flex justify-content-end">
                                    <input type="radio" value="5" asp-for="NewReviewRating" id="star5" class="d-none" required /><label for="star5" class="fs-3 cursor-pointer text-muted"><i class="bi bi-star-fill"></i></label>
                                    <input type="radio" value="4" asp-for="NewReviewRating" id="star4" class="d-none" /><label for="star4" class="fs-3 cursor-pointer text-muted"><i class="bi bi-star-fill"></i></label>
                                    <input type="radio" value="3" asp-for="NewReviewRating" id="star3" class="d-none" /><label for="star3" class="fs-3 cursor-pointer text-muted"><i class="bi bi-star-fill"></i></label>
                                    <input type="radio" value="2" asp-for="NewReviewRating" id="star2" class="d-none" /><label for="star2" class="fs-3 cursor-pointer text-muted"><i class="bi bi-star-fill"></i></label>
                                    <input type="radio" value="1" asp-for="NewReviewRating" id="star1" class="d-none" /><label for="star1" class="fs-3 cursor-pointer text-muted"><i class="bi bi-star-fill"></i></label>
                                </div>
                                <span asp-validation-for="NewReviewRating" class="text-danger d-block mt-1"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewReviewComment" class="form-label fw-bold">تعليقك (اختياري):</label>
                                <textarea asp-for="NewReviewComment" class="form-control" rows="3" placeholder="أخبرنا برأيك في هذا المنتج..."></textarea>
                                <span asp-validation-for="NewReviewComment" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success px-4" style="border-radius: 8px;">إرسال التقييم</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0 text-center">
                            يجب عليك <a asp-controller="Account" asp-action="Login" class="alert-link">تسجيل الدخول</a> لتتمكن من إضافة تقييم.
                        </div>
                    }
                </div>
            </div>

            <!-- List of Reviews -->
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="review-list">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card shadow-sm mb-3 border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="card-subtitle fw-bold text-dark mb-0">@(review.User?.FullName ?? "عميل")</h6>
                                    <small class="text-muted" dir="ltr">@review.CreatedAt.ToString("yyyy-MM-dd")</small>
                                </div>
                                <div class="text-warning mb-2 fs-6">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                                @if (!string.IsNullOrWhiteSpace(review.Comment))
                                {
                                    <p class="card-text text-muted mb-0">@review.Comment</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-chat-left-text" style="font-size: 3rem; color: #cbd5e1;"></i>
                    <p class="mt-3">لا توجد تقييمات حتى الآن. كن أول من يقيّم هذا المنتج!</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rating-stars label {
            transition: color 0.2s;
        }
        .rating-stars label:hover,
        .rating-stars label:hover ~ label,
        .rating-stars input:checked ~ label {
            color: #ffc107 !important;
        }
    </style>
}
