@model Product

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h4 class="card-text">@Model.Price.ToString("c")</h4>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">@Model.Category.Name</small></p>
                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.Id" class="btn btn-primary">Add to Cart</a>
            </div>
        </div>
    </div>
</div>
